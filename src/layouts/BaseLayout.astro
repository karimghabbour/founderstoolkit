---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Curated tools for solo founders and indie hackers' } = Astro.props;
const siteName = 'Solo Founder Tools';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | {siteName}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="border-b border-gray-200">
      <nav class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="text-xl font-bold text-gray-900">
          {siteName}
        </a>
        <div class="flex items-center gap-6">
          <a href="/categories" class="text-gray-600 hover:text-gray-900">Categories</a>
          <a href="/about" class="text-gray-600 hover:text-gray-900">About</a>
          <a href="/submit" class="btn-secondary">Submit Tool</a>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="border-t border-gray-200 mt-16">
      <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-gray-600 text-sm">
            Â© {new Date().getFullYear()} {siteName}. Helping solo founders find the right tools.
          </p>
          <div class="flex gap-6 text-sm">
            <a href="/about" class="text-gray-600 hover:text-gray-900">About</a>
            <a href="/submit" class="text-gray-600 hover:text-gray-900">Submit a Tool</a>
            <a href="/advertise" class="text-gray-600 hover:text-gray-900">Advertise</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
