---
import BaseLayout from '../layouts/BaseLayout.astro';
import Search from '../components/Search.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import { getCollection } from 'astro:content';

const tools = await getCollection('tools');
const categories = await getCollection('categories');

const getSlug = (id: string) => id.replace(/\.md$/, '');

const featuredTools = tools.filter(tool => tool.data.featured);
const recentTools = tools
  .sort((a, b) => new Date(b.data.lastVerified).getTime() - new Date(a.data.lastVerified).getTime())
  .slice(0, 6);

const sortedCategories = categories.sort((a, b) => a.data.order - b.data.order);

// Category name lookup for cards
const categoryMap = Object.fromEntries(
  categories.map(c => [getSlug(c.id), c.data.name])
);
---

<BaseLayout title="Home">
  <!-- Hero -->
  <section class="pt-24 pb-20 bg-[#fafaf9]">
    <div class="max-w-3xl mx-auto px-4 text-center">
      <p class="text-sm font-semibold tracking-wide uppercase text-primary-600 mb-4">{tools.length} tools across {categories.length} categories</p>
      <h1 class="font-display text-5xl md:text-6xl lg:text-7xl text-gray-900 mb-6 leading-[1.05]">
        The tools that <em class="italic">solo founders</em> actually use
      </h1>
      <p class="text-lg text-gray-500 mb-10 max-w-xl mx-auto leading-relaxed">
        Honest pros, cons, and pricing for every tool. No fluff, no sponsored rankings.
      </p>
      <div class="max-w-lg mx-auto">
        <Search />
      </div>
      <p class="mt-5 text-xs text-gray-400">Updated weekly &middot; 100% independent &middot; No sponsored rankings</p>
    </div>
  </section>

  <!-- Categories -->
  <section class="py-20 border-t border-gray-100">
    <div class="max-w-5xl mx-auto px-4">
      <div class="flex items-end justify-between mb-10">
        <div>
          <p class="text-xs font-semibold tracking-widest uppercase text-gray-400 mb-2">Browse</p>
          <h2 class="font-display text-3xl text-gray-900">Categories</h2>
        </div>
        <a href="/categories" class="text-sm font-medium text-gray-400 hover:text-gray-900 transition-colors">View all &rarr;</a>
      </div>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3">
        {sortedCategories.map(category => {
          const slug = getSlug(category.id);
          const count = tools.filter(t => t.data.category === slug).length;
          return (
            <a href={`/categories/${slug}`} class="group flex items-center gap-3.5 py-3.5 px-4 rounded-lg border border-gray-150 bg-white hover:border-gray-300 hover:shadow-sm transition-all">
              <span class="text-xl flex-shrink-0">{category.data.icon}</span>
              <div class="min-w-0">
                <p class="text-sm font-semibold text-gray-900 group-hover:text-primary-600 transition-colors truncate">{category.data.name}</p>
                <p class="text-xs text-gray-400">{count} tools</p>
              </div>
            </a>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Featured Tools -->
  {featuredTools.length > 0 && (
    <section class="py-20 border-t border-gray-100">
      <div class="max-w-5xl mx-auto px-4">
        <div class="mb-10">
          <p class="text-xs font-semibold tracking-widest uppercase text-amber-500 mb-2">Spotlight</p>
          <h2 class="font-display text-3xl text-gray-900">Featured</h2>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
          {featuredTools.map(tool => (
            <a href={`/tools/${getSlug(tool.id)}`} class="group block bg-white border border-gray-200 rounded-xl p-5 hover:border-amber-300 hover:shadow-md transition-all duration-200">
              <div class="flex items-center gap-2 mb-3">
                <span class="featured-badge">Featured</span>
                <span class="text-xs text-gray-400">{categoryMap[tool.data.category] || tool.data.category}</span>
              </div>
              <h3 class="text-base font-semibold text-gray-900 group-hover:text-primary-700 mb-1.5">
                {tool.data.name}
              </h3>
              <p class="text-sm text-gray-500 mb-4 line-clamp-2 leading-relaxed">{tool.data.description}</p>
              <div class="flex items-center justify-between pt-3 border-t border-gray-100">
                <p class="text-xs font-medium text-gray-500">{tool.data.pricing}</p>
                <span class="text-xs font-medium text-primary-600 opacity-0 group-hover:opacity-100 transition-opacity">View details &rarr;</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Recently Added -->
  <section class="py-20 border-t border-gray-100">
    <div class="max-w-5xl mx-auto px-4">
      <div class="flex items-end justify-between mb-10">
        <div>
          <p class="text-xs font-semibold tracking-widest uppercase text-gray-400 mb-2">New</p>
          <h2 class="font-display text-3xl text-gray-900">Recently added</h2>
        </div>
        <a href="/tools" class="text-sm font-medium text-gray-400 hover:text-gray-900 transition-colors">All {tools.length} tools &rarr;</a>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
        {recentTools.map(tool => (
          <a href={`/tools/${getSlug(tool.id)}`} class="group block bg-white border border-gray-200 rounded-xl p-5 hover:border-gray-300 hover:shadow-md transition-all duration-200">
            <p class="text-xs font-medium text-gray-400 mb-2.5">{categoryMap[tool.data.category] || tool.data.category}</p>
            <h3 class="text-base font-semibold text-gray-900 group-hover:text-primary-700 mb-1.5">
              {tool.data.name}
            </h3>
            <p class="text-sm text-gray-500 mb-4 line-clamp-2 leading-relaxed">{tool.data.description}</p>
            <div class="flex items-center justify-between pt-3 border-t border-gray-100">
              <p class="text-xs font-medium text-gray-500">{tool.data.pricing}</p>
              <span class="text-xs font-medium text-primary-600 opacity-0 group-hover:opacity-100 transition-opacity">View details &rarr;</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Stack Builder CTA -->
  <section class="py-24 border-t border-gray-100">
    <div class="max-w-5xl mx-auto px-4">
      <div class="bg-gray-950 rounded-2xl px-8 py-16 md:px-16 text-center">
        <p class="text-xs font-semibold tracking-widest uppercase text-gray-500 mb-3">Stack Builder</p>
        <h2 class="font-display text-3xl md:text-4xl text-white mb-4">Not sure where to start?</h2>
        <p class="text-gray-400 mb-8 max-w-md mx-auto leading-relaxed">
          Pick your business type and get a recommended tool stack, complete with pricing breakdowns.
        </p>
        <a href="/stack-builder" class="inline-flex items-center px-6 py-3 bg-white text-gray-900 text-sm font-semibold rounded-lg hover:bg-gray-100 transition-colors">
          Build your stack
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path></svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Newsletter -->
  <section class="py-20 border-t border-gray-100">
    <div class="max-w-3xl mx-auto px-4">
      <NewsletterSignup />
    </div>
  </section>
</BaseLayout>
